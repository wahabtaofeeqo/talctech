                            <option>5</option>
                            <option>6</option>
                            <option>7</option>
                            <option>8</option>
                            <option>9</option>
                            <option>10</option>
                            <option>Irrelevant</option>
                          </select>
                      </div>

                      <!-- Select Field Seven -->
                      <div>
                        <label>Do you have other preferences that you need us to record?</label>
                          <select id="preference">
                            <option hidden>Select Option</option>
                            <option>Yes</option>
                            <option>No</option>
                          </select>
                      </div>

                      <div id="preferenceBox" style="display: none;">
                        <label>Preference</label>
                        <textarea placeholder="Preference" class="form-control input" name="preference"></textarea>
                      </div>
          
                      <!-- Phone Number -->
                      <div>
                        <label>Your Phone Number</label>
                        <input type="text" name="phone" class="form-control input" placeholder="Enter phone number">
                      </div>
          
                      <!-- Email Address -->
                      <div>
