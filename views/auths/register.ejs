                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                          </select>
                      </div>
          
                      <!-- Select Field Two -->
                      <div>
                        <label>Do you have a minimum income level for your Tenant?</label>
                        <select id="income">
                          <option hidden>Select Option</option>
                          <option>Yes</option>
                          <option>No</option>
                        </select>
                      </div>

                      <div id="incomeBox" style="display: none;">
                        <label>Minimum Income</label>
                        <input type="number" min="100" name="income" class="form-control input" placeholder="Amout">
                      </div>
          
                      <!-- Select Field Three -->
                      <div>
                        <label>Do you require only professionals?</label>
                        <select name="professional">
                          <option hidden>Select Option</option>
                          <option>Yes</option>
                          <option>No</option>
                        </select>
                      </div>
          
                      <!-- Select Field Four -->
