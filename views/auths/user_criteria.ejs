            <div class="desk-sign-cont">
                <a href="/login"><button class="btn-1">LOGIN / SIGN UP </button></a>
            </div>
        </div>
        <div class="signin-cont">
            <div class="signin-form-cont">
                <h3>Set Criteria</h3>
                <form action="/set-criteria" method="POST">
                    <div class="login-name-cont py-1">
                        <label class="control-label text-light">Property Type</label>
                        <select class="form-control" name="property">
                            <option>House</option>
                            <option>Apartment</option>
                            <option>Office</option>
                        </select>
                    </div>
                    <div class="login-name-cont py-1">
                        <label class="control-label text-light">Offer Type</label>
                        <select class="form-control" name="offer">
                            <option>Sell</option>
                            <option>Rent</option>
                        </select>
                    </div>
                    <div class="login-name-cont py-1">
                        <label class="control-label text-light">Price</label>
                        <select class="form-control" name="price">
                            <option>below 200000</option>
                            <option>below 300000</option>
                            <option>below 400000</option>
                            <option>below 500000</option>
                            <option>above 500000</option>
                        </select>
                    </div>
                    <div class="login-name-cont py-1">
                        <label class="control-label text-light">City</label>
                        <select class="form-control" name="city">
                            <option>Lagos</option>
                            <option>Abuja</option>
                            <option>Port Harcourt</option>
                            <option>Enugu</option>
                            <option>Kaduna</option>
                            <option>Sokoto</option>
                            <option>Benin</option>
                            <option>Warri</option>
                            <option>Onitsha</option>
                        </select>
                    </div>
                    <div class="login-pass-cont pt-3">
                        <input type="text" name="neighbourhood" placeholder="Neighbourhood" required>
                    </div>
                    <div class="login-name-cont">
                        <label class="control-label text-light">Bedrooms</label>
                        <select class="form-control" name="bedrooms">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5+</option>
                        </select>
                    </div>
                    <div class="login-name-cont py-3">
                        <label class="control-label text-light">Bathrooms</label>
                        <select class="form-control" name="bathrooms">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5+</olption>
                        </select>
                    </div>
                    <div class="signin-btn-cont">
                        <button type="submit">Submit</button>
                    </div>
                </form>
            </div>
        </div>
