<%- contentFor('body') %>

	<div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">View Requests</h1>
    </div>

	<div class="card">
		<div class="card-body">
			<div class="table-responsive">
	        	<table class="table table-striped" id="dataTable" width="100%" cellspacing="0">
	        		<thead>
	        			<tr>
		        			<th>#</th>
		        			<th>Type</th>
		        			<th>Offer</th>
		        			<th>Price</th>
		        			<th>Action</th>
		        		</tr>
	        		</thead>

	        		<tbody>
	        			<% for(let i = 0; i < requests.length; i++) {%>
	        				<tr>
	        					<td><%= (i + 1) %></td>
	        					<td><%= requests[i].property.property_type %></td>
	        					<td><%= requests[i].property.offer_type %></td>
	        					<td><%= requests[i].property.price %></td>
	        					<td>
	        						<% if(requests[i].status == 1) { %>
	        							<a href="/tenant/requests/<%= requests[i].id %>" class="btn btn-info">
	            							View Response
	                    				</a>
	        						<% } else { %>
	        							<button class="btn btn-danger btn-sm btn-delete" data-id="<%= requests[i].id %>" data-type="request">Delete</button>
	        						<% } %>
	        					</td>
	        				</tr>
	        			<% } %>
	        		</tbody>
	        	</table>
	        </div>
		</div>
	</div>