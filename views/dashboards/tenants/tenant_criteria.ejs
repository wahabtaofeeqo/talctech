<!-- partial -->
<div class="main-panel">
    <%- include("../../partials/alerts") %>
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                Criteria
            </h3>
            <%- include("../../partials/breadcrumb") %>
        </div>
        <div class="row">
            <div class="col-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"></h4>
                        <form class="form-sample" method="POST" action="/criterias">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Property Type</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="property">
                                                <option value="<%= criteria.property_type %>" selected>
                                                    <%= criteria.property_type %></option>
                                                <option>House</option>
                                                <option>Apartment</option>
                                                <option>Office</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Offer Type</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="offer">
                                                <option value="<%= criteria.offer_type %>" selected>
                                                    <%= criteria.offer_type %></option>
                                                <option>Sell</option>
                                                <option>Rent</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Price</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="price">
                                                <option value="<%= criteria.price %>" selected><%= criteria.price %>
                                                </option>
                                                <option>below 200000</option>
                                                <option>below 300000</option>
                                                <option>below 400000</option>
                                                <option>below 500000</option>
                                                <option>above 500000</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">City</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="city">
                                                <option value="<%= criteria.city %>" selected><%= criteria.city %>
                                                </option>
                                                <option>Lagos</option>
                                                <option>Abuja</option>
                                                <option>Port Harcourt</option>
                                                <option>Enugu</option>
                                                <option>Kaduna</option>
                                                <option>Sokoto</option>
                                                <option>Benin</option>
                                                <option>Warri</option>
                                                <option>Onitsha</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Neighbourhoood</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control" name="neighbourhood"
                                                value="<%= criteria.neighbourhood %>">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Bedrooms</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="bedrooms">
                                                <option value="<%= criteria.bedrooms %>" selected>
                                                    <%= criteria.bedrooms %></option>
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5+</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <label class="col-sm-3 col-form-label">Bathrooms</label>
                                        <div class="col-sm-9">
                                            <select class="form-control" name="bathrooms">
                                                <option value="<%= criteria.bathrooms %>" selected>
                                                    <%= criteria.bathrooms %></option>
                                                <option>1</option>
                                                <option>2</option>
                                                <option>3</option>
                                                <option>4</option>
                                                <option>5+</olption>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row mt-4">
                                <div class="col-12  d-flex align-items-center justify-content-center">
                                    <div class="col-sm-4 col-sm-offset-2">
                                        <button type="submit" class="btn btn-outline-dark btn-block">Update</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- content-wrapper ends -->
    <!-- partial:../../partials/_footer.html -->
    <%- include("../../partials/footer") %>